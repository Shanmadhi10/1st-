
# Define a class circle with an attribute radius. 
# Include methods to calculate and return the area and circumference of the circle.

class Circle:
    def __init__(self,radius):
        self.radius=radius
    
    def circumference(self):
        print("circumference of the circle is",(2*3.14*self.radius))
    def area(self):
        print("Area of the circle is", (3.14*self.radius**2))
        
radius=int(input("enter radius"))
circle=Circle(radius)
circle.area()
circle.circumference()